{
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended", // Add TypeScript recommended rules
    "prettier",
    "prettier/@typescript-eslint", // Add Prettier rules for TypeScript
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser", // Specify TypeScript parser
  "plugins": [
    "@typescript-eslint", // Add TypeScript plugin
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }], // Update for TypeScript
    "react/prefer-stateless-function": 0,
    "import/no-extraneous-dependencies": "off",
    "@typescript-eslint/explicit-function-return-type": "off", // Customize TypeScript rules
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
